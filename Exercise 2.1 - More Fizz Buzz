// modifying exercise 2 to include FizzBuzz

for (var number = 1; number <= 100; number ++)
// remembering ++ is the same as += 1
{
if (number % 3 == 0 && number % 5 == 0)
{
console.log ("fizzbuzz")
}
else if (number % 3 == 0 )
{
  console.log("fizz")
}
else if(number % 5 == 0){

console.log ("buzz")}
else {
    console.log(number)}
}
